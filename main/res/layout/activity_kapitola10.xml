<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
    <RadioGroup android:id="@+id/activities1"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dip">
        <RadioButton
            android:id="@+id/act1_1"
            android:text="@string/title_activity_activity1"  />
        <RadioButton
            android:id="@+id/act1_2"
            android:text="@string/title_activity_activity2"  />
    </RadioGroup>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Change action"
        android:id="@+id/action_button"
        android:onClick="mcSetActivity" />
</LinearLayout>